#!/bin/bash

COMPOSE_FILE="${COMPOSE_FILE:-$(dirname $0)/compose.yml}"
ENV_FILE="${ENV_FILE:-$(dirname $0)/.env}"
PROJ="${PROJ:-htpc}"

docker-compose \
	--profile nzb \
	--profile bt \
	--profile metrics \
	--profile requests \
	--profile admin \
	--profile opt \
	--profile subs \
	--project-name $PROJ \
	--file $COMPOSE_FILE \
	--env-file $ENV_FILE \
	"$@"

